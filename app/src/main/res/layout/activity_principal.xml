<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.owlfynnygames.compareprecos.PrincipalActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produto 1"
        android:id="@+id/tvProduto1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvQtdeProd1"
        android:layout_below="@+id/tvProduto1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Qtde" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtQtdeProd1"
        android:layout_alignBaseline="@+id/tvQtdeProd1"
        android:layout_alignBottom="@+id/tvQtdeProd1"
        android:layout_toRightOf="@+id/tvQtdeProd1"
        android:layout_toEndOf="@+id/tvQtdeProd1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvMLProd1"
        android:text="ML"
        android:layout_below="@+id/tvQtdeProd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtMLProd1"
        android:layout_below="@+id/edtQtdeProd1"
        android:layout_toRightOf="@+id/tvQtdeProd1"
        android:layout_toEndOf="@+id/tvQtdeProd1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvValorProd1"
        android:text="R$"
        android:layout_below="@+id/tvMLProd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtPrecoProd1"
        android:text=""
        android:layout_below="@+id/tvMLProd1"
        android:layout_alignLeft="@+id/edtMLProd1"
        android:layout_alignStart="@+id/edtMLProd1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produto 2"
        android:id="@+id/tvProduto2"
        android:layout_below="@+id/edtPrecoProd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvQtdeProd2"
        android:text="Qtde"
        android:layout_below="@+id/tvProduto2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtQtdeProd2"
        android:layout_alignBottom="@+id/tvQtdeProd2"
        android:layout_alignLeft="@+id/edtPrecoProd1"
        android:layout_alignStart="@+id/edtPrecoProd1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvMLProd2"
        android:text="ML"
        android:layout_below="@+id/tvQtdeProd2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtMLProd2"
        android:text=""
        android:layout_below="@+id/edtQtdeProd2"
        android:layout_alignLeft="@+id/edtQtdeProd2"
        android:layout_alignStart="@+id/edtQtdeProd2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvValorProd2"
        android:text="R$"
        android:layout_below="@+id/edtMLProd2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtPrecoProd2"
        android:layout_alignTop="@+id/tvValorProd2"
        android:layout_toRightOf="@+id/tvQtdeProd2"
        android:layout_toEndOf="@+id/tvQtdeProd2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comparar"
        android:id="@+id/btnComparar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/edtPrecoProd2"
        android:layout_alignStart="@+id/edtPrecoProd2"
        android:layout_alignRight="@+id/edtPrecoProd2"
        android:layout_alignEnd="@+id/edtPrecoProd2"
        android:layout_marginBottom="15dp" />

</LinearLayout>
